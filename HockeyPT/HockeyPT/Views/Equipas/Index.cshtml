@model IEnumerable<HockeyPT.Models.Equipas>

@{
    ViewBag.Title = "Equipas";
}

<h1> Lista de Equipas </h1>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
     <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logotipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th></th>
        </tr>
    
    @foreach (var equipas in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => equipas.Nome)
            </td>
            <td>
                <a href="~/EquipasFotos/@equipas.Logotipo" target="_blank">
                    <img src="~/EquipasFotos/@equipas.Logotipo" width="55" height="70" />
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => equipas.Cidade)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id= equipas.ID }) |
                @Html.ActionLink("Detalhes", "Details", new { id= equipas.ID }) |
                @Html.ActionLink("Apagar", "Delete", new { id= equipas.ID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
