@model IEnumerable<HockeyPT.Models.Noticias>

@{
    ViewBag.Title = "Noticias";
}


<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>

    @if (User.IsInRole("Administrador") || User.IsInRole("Moderador"))
    {
        <p>
            @Html.ActionLink("Criar uma nova Noticia", "Create")
        </p>
    }

    <br />

    <div style="margin-bottom:8px">
        <img src="~/ImagensFundo/ImagemFunco.jpg" style="width:100%; height:300px"/>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {


            <div class="col-md-4">
                <div class="thumbnail">
                    <a href="/Noticias/Details/@item.ID">

                        <img src="~/NoticiasFotos/@item.Fotografia" style="object-fit:cover; width:350px ; height:250px " />
                    </a>
                    <div class="caption" style="height:58px">
                        @Html.DisplayFor(titulo => item.Titulo)
                    </div>
                </div>
                
                
                @*<h2><a class="slider-tittle" href="~/Noticias/Details/@Html.DisplayFor(ID => item.ID)">@Html.DisplayFor(titulo => item.Titulo)</a></h2>*@
            </div>
        }
    </div>

