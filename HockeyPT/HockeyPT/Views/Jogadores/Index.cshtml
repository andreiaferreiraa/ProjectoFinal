                <p>@Html.DisplayFor(modelItem => item.Peso) kilos</p> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fotografia)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
